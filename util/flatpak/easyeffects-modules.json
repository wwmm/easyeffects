                        }
                    ]
                },
                {
                    "name": "rubberband",
                    "buildsystem": "meson",
                    "cleanup": [
                        "/include",
                        "/lib/*.a",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://breakfastquay.com/files/releases/rubberband-3.1.0.tar.bz2",
                            "sha256": "b95a76da5cdb3966770c60115ecd838f84061120f884c3bfdc904f75931ec9aa",
                            "x-checker-data": {
                                "type": "html",
