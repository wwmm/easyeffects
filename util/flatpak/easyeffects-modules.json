        {
            "name": "zenity",
            "buildsystem": "meson",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/zenity",
                    "tag": "3.44.0",
                    "commit": "7bf8c8910d34bfb2b883b32118b93b68d44dd77b",
